DECLARE @attribute nvarchar(100) = 'c_TransactionDescription'
,@module nvarchar(20) = 'GL'
,@sql varchar(MAX)

SET @sql = 
'DECLARE @attribute nvarchar(20) = '''+@attribute+'''
,@module nvarchar(20) = '''+@module+'''

IF EXISTS(SELECT * FROM sys.all_columns WHERE object_id = (SELECT object_id FROM sys.Tables WHERE name = ''f_Trans_'+ @module+''') AND name = '''+@attribute+''')
ALTER TABLE f_Trans_'+ @module+'
DROP COLUMN '+@attribute+';

DELETE FROM ModuleAttribute
WHERE Module = @module
AND Field = @attribute;

SELECT TOP 1 * FROM f_Trans_' + @module +';

SELECT name FROM sys.all_columns WHERE object_id = (SELECT object_id FROM sys.Tables WHERE name = ''f_Trans_'+ @module+''') ORDER BY 1;

SELECT * FROM ModuleAttribute
WHERE Module = @module AND Field = @attribute'

--PRINT @sql

EXEC (@sql)
